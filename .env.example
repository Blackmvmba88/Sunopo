# Copy to .env and fill sensitive values
# Base and export paths (override if you don't use macOS paths)
SUNOPO_BASE_DIR=/path/to/Sunopo
SUNOPO_EXPORTS_DIR=${SUNOPO_BASE_DIR}/exports
SUNOPO_REPORTS_DIR=${SUNOPO_BASE_DIR}/reports

# Path to file containing Suno session cookie string
SUNO_SESSION_ID_PATH=/Users/you/suno_downloader/suno_session.txt

# Flask settings
FLASK_HOST=127.0.0.1
FLASK_PORT=5555

# Storage (S3)
SUNOPO_USE_S3=false
SUNOPO_S3_BUCKET=your-bucket-name
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOURKEY
AWS_SECRET_ACCESS_KEY=YOURSECRET

# Redis for sessions and optional caching
REDIS_URL=redis://localhost:6379/0
SESSION_TTL_SECONDS=86400
# Generate a fernet key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SESSION_FERNET_KEY=your_fernet_key_here
